@model IEnumerable<HouseOfShows.WebMVC.Models.Status>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>NomeStatus</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.NomeStatus
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NomeStatus">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NomeStatus">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NomeStatus">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
